{
  "name": "laundry",
  "version": "1.0.0-rc1",
  "description": "A CloudFormation template linter.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "bin/laundry",
  "scripts": {
    "start": "jest --watch",
    "build": "tsc -p .",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.10",
    "@types/yargs": "^12.0.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "yargs": "^12.0.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".*flycheck.*"
    ],
    "watchPathIgnorePatterns": [
      ".*flycheck.*"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/__tests__/setup.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
